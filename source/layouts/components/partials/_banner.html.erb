<% if banner_type == :image %>
  <%- image_height ||= 500 %>
  <div class="banner banner-image" style="background-image: url(<%=image_url%>); height: <%=image_height%>px" data-stellar-background-ratio="0.5">

  </div>

  <div class="container">
    <div class="banner-caption caption">
      <%=caption%>
      <% if defined?source_name %>
        via: <%=link_to source_name, source_url %>
      <% end %>
    </div>
  </div>
<% elsif banner_type == :iframe %>
  <% max_width_style = width.present? ? "max-width: #{width};" : "" %>
  <div class="banner banner-iframe">
    <iframe width="100%" height="600" frameborder="0" src="<%=iframe_url%>" style="<%=max_width_style%>" allowfullscreen webkitallowfullscreen mozallowfullscreen oallowfullscreen msallowfullscreen></iframe>
  </div>
<% end %>

